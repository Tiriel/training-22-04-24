{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if book is not empty %}
        <h1>{{ book.title }}</h1>

        <img class="float-end" src="{{ book.cover }}" alt="{{ book.title }} cover">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Id : {{ book.id }}</li>
            <li class="list-group-item">Author : {{ book.author }}</li>
            <li class="list-group-item">ISBN : {{ book.isbn }}</li>
            <li class="list-group-item">Plot : {{ book.plot }}</li>
            <li class="list-group-item">Released at : {{ book.releasedAt|date('d M Y') }}</li>
        </ul>
    {% else %}
        <h1>Not found</h1>
    {% endif %}
</div>
{% endblock %}
