{% props target = '', label = '' %}

<li class="nav-item">
    {% if target == 'exit_impersonation' %}
    <a class="nav-link"
       href="{{ path('app_main_index', {_switch_user: '_exit'}) }}">{{ label }}</a>
    {% else %}
    <a class="nav-link{{ app.current_route == target ? ' active'}}"
       href="{{ path(target) }}">{{ label }}</a>
    {% endif %}
</li>

